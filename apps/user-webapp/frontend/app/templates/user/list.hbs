<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-10 col-md-offset-1">
                <div class="panel panel-primary">
                    <div class="panel-heading">
                        <h2>
                            <i class="fa fa-list-alt"></i>&nbsp;Users
                        </h2>
                    </div>
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-md-3 pull-left">
                                <div class="form-group ">
                                    <button class="fa fa-file-o btn btn-primary" {{action 'showModalNew'}}>&nbsp;New User</button>
                                </div>
                            </div>
                            <div class="col-md-3 pull-right">
                                <div class="form-group ">
                                    <div class="input-group">
                                      <span class="input-group-addon"><i class="fa fa-search"></i></span>
                                      {{input type="text" class="form-control" value=userFilter placeholder="Enter name"}}
                                    </div>
                                </div>
                            </div>
                        </div>
                        <table class="table table-bordered table-hover">
                            <thead>
                                <tr class="table-header">
                                    <th>First Name</th>
                                    <th>Last Name</th>
                                    <th>Birth Date</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                {{#each filteredUsers as |user|}}
                                    <tr class="table-row">
                                        <td>{{user.firstName}}</td>
                                        <td>{{user.lastName}}</td>
                                        <td>{{user.birthDate}}</td>
                                        <td>
                                            <button class="fa fa-pencil-square-o btn btn-primary" {{action 'showModalUpdate' user}}>&nbsp;Update</button>
                                            <button type="button" class="fa fa-trash btn btn-danger" {{action "delete" user.id}}>&nbsp;Delete</button>
                                        </td>
                                    </tr>
                                {{/each}}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

{{outlet 'modal'}}
